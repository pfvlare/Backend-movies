datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(uuid()) @map("_id")
  email        String        @unique
  firstname    String
  lastname     String
  phone        String
  address      String
  password     String
  Subscription Subscription?
  Favorites    Favorites?
  Card         Card?
}

model Subscription {
  id           String   @id @default(uuid()) @map("_id")
  plan         Plan
  value        Float
  registeredAt DateTime
  expiresAt    DateTime
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
}

model Movie {
  id         String     @id @default(uuid()) @map("_id")
  title      String
  apiId      String     @unique
  imageUrl   String
  favorite   Favorites? @relation(fields: [favoriteId], references: [id])
  favoriteId String?
}

model Favorites {
  id     String  @id @default(uuid()) @map("_id")
  user   User    @relation(fields: [userId], references: [id])
  userId String  @unique
  Movie  Movie[]
}

model Card {
  id           String   @id @default(uuid()) @map("_id")
  nameCard     String
  cardNumber   String
  expiresDate  DateTime
  securityCode String
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
}

enum Plan {
  basic
  intermediary
  complete
}
